<Window x:Class="vipief.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vipief"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

       
        mc:Ignorable="d"
        Title="Ежедневник" Height="300" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Button x:Name="NotesBtn" Click="NotesBtn_Click" Content="Заметки" HorizontalAlignment="Center" Width="150"></Button>
        <Button x:Name="TasksBtn" Click="TasksBtn_Click" Grid.Row="1" Content="Задачи" HorizontalAlignment="Center" Width="150"></Button>
        <Button x:Name="Setting" Click="Setting_Click" Grid.Row="2" Content="Выбор темы" HorizontalAlignment="Center" Width="150"></Button>

    </Grid>
</Window>
    
